  <script>
    // H√†m x·ª≠ l√Ω khi nh·∫•n n√∫t DOWNLOAD NOW
    function downloadNow() {
      alert("B·∫Øt ƒë·∫ßu t·∫£i game t·ª´ Gnofiv.com!");
    }
    
    // T·ª± ƒë·ªông c·∫≠p nh·∫≠t ·∫£nh n·ªÅn c·ªßa Hero Banner m·ªói 3 gi√¢y
    const hero = document.querySelector('.hero');
    const heroImages = ['nen1.jpg', 'nen2.jpg', 'nen3.jpg'];
    let currentHeroIndex = 0;
    setInterval(() => {
      currentHeroIndex = (currentHeroIndex + 1) % heroImages.length;
      hero.style.backgroundImage = `url('${heroImages[currentHeroIndex]}')`;
    }, 3000);
    
    // X·ª≠ l√Ω m·ªü modal hi·ªÉn th·ªã th√¥ng tin game
    const modal = document.getElementById('game-modal');
    const modalImage = document.getElementById('modal-image');
    const modalGameTitle = document.getElementById('modal-game-title');
    const modalGamePrice = document.getElementById('modal-game-price');
    const closeModalBtn = document.querySelector('.modal .close');
    
    function openModal(gameTitle, gamePrice, gameImage) {
      modalImage.src = gameImage;
      modalGameTitle.textContent = gameTitle;
      modalGamePrice.textContent = `Gi√°: ${gamePrice}`;
      modal.style.display = 'block';
    }
    
    // L·∫Øng nghe s·ª± ki·ªán cho n√∫t "Ch·ªçn mua" tr√™n card game
    const buyGameButtons = document.querySelectorAll('.buy-game');
    buyGameButtons.forEach(button => {
      button.addEventListener('click', () => {
        const title = button.getAttribute('data-title');
        const price = button.getAttribute('data-price');
        const image = button.getAttribute('data-image');
        openModal(title, price, image);
      });
    });
    
    // ƒê√≥ng modal khi nh·∫•n n√∫t "√ó"
    closeModalBtn.addEventListener('click', () => {
      modal.style.display = 'none';
    });
    
    // ƒê√≥ng modal khi nh·∫•n b√™n ngo√†i modal-content
    window.addEventListener('click', (event) => {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
    
    // M·∫£ng l∆∞u tr·ªØ s·∫£n ph·∫©m trong gi·ªè h√†ng
    let cartItems = [];
    
    // C·∫≠p nh·∫≠t n·ªôi dung gi·ªè h√†ng
    function updateCartPopup() {
      const cartCountElem = document.getElementById('cart-count');
      const cartItemsElem = document.getElementById('cart-items');
      cartCountElem.textContent = cartItems.length;
      cartItemsElem.innerHTML = "";
      cartItems.forEach((item, index) => {
        const li = document.createElement('li');
        li.innerHTML = `
          ${item.title} - ${item.price} 
          <button class="remove-item" onclick="removeCartItem(${index})">X</button>
        `;
        cartItemsElem.appendChild(li);
      });
    }
    
    // H√†m x√≥a s·∫£n ph·∫©m kh·ªèi gi·ªè h√†ng
    function removeCartItem(index) {
      cartItems.splice(index, 1);
      updateCartPopup();
    }
    
    // X·ª≠ l√Ω n√∫t "Mua ngay" trong modal
    const purchaseNowButton = document.getElementById('purchase-now');
    purchaseNowButton.addEventListener('click', () => {
      alert(`B·∫°n ƒë√£ mua ngay: ${modalGameTitle.textContent}\n${modalGamePrice.textContent}`);
      modal.style.display = 'none';
    });
    
    // X·ª≠ l√Ω n√∫t "Th√™m v√†o gi·ªè h√†ng" trong modal
    const addToCartButton = document.getElementById('add-to-cart');
    addToCartButton.addEventListener('click', () => {
      const item = {
        title: modalGameTitle.textContent,
        price: modalGamePrice.textContent.replace('Gi√°: ', ''),
        image: modalImage.src
      };
      cartItems.push(item);
      updateCartPopup();
      alert(`Game "${item.title}" ƒë√£ ƒë∆∞·ª£c th√™m v√†o gi·ªè h√†ng.`);
      modal.style.display = 'none';
    });
    
    // X·ª≠ l√Ω hi·ªÉn th·ªã popup gi·ªè h√†ng khi click v√†o icon gi·ªè h√†ng
    const cartIcon = document.getElementById('cart-icon');
    cartIcon.addEventListener('click', (event) => {
      event.stopPropagation();
      const cartPopup = document.getElementById('cart-popup');
      cartPopup.style.display = (cartPopup.style.display === 'block') ? 'none' : 'block';
    });
    // ·∫®n popup gi·ªè h√†ng n·∫øu click b√™n ngo√†i
    document.addEventListener('click', () => {
      const cartPopup = document.getElementById('cart-popup');
      cartPopup.style.display = 'none';
    });
    
  </script>
